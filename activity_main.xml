<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeeProgressPage"
    android:background="@drawable/dumbbells">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome, user!"
        android:layout_above="@id/btnEnterWeight"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnEnterWeight"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:text="Enter weight"
        android:backgroundTint="@android:color/holo_blue_light"/>

    <Button
        android:id="@+id/btnSeeProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnEnterWeight"
        android:layout_marginTop="20dp"
        android:text="See progress"
        android:backgroundTint="@android:color/holo_blue_light"/>

</RelativeLayout>